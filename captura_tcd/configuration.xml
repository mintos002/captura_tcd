<?xml version="1.0" encoding="utf-8"?>
<opencv_storage>
  
  <!-- Path where images will be saved 
          - by default images will be saved inside the same application folder,
            set the output path surrounded by "". For example: "C:\dir\"  -->
  <PathSave>"C:\Users\aljuasin\Desktop\captura_tcd\im√°genes\jetson"</PathSave>
  <!-- Delete all files of the output_images file in Path
        - 0 do not delete (default)
        - 1 delete -->
  <DeleteDir>0</DeleteDir>
  
  <!-- Color and depth image resolution mode and frames per second 
        - IntelResolution_mode 0 = 1280x720 (default)
        - IntelResolution_mode 1 = 640x480
        - IntelResolution_mode 2 = 848x480 
        - Recomended IntelFPS = 30, 15 or 6 ( If app crashes with a defined IntelResolution_mode try other IntelFPS configuration) -->
  <IntelResolution_mode>1</IntelResolution_mode>
  <IntelFPS>30</IntelFPS>
  <!-- Postprocess realsense camera images 
        - 0 Do not postprocess (default) 
        - 1 Postprocess-->
  <IntelPostprocess>0</IntelPostprocess>
  
  <!-- Flip images
        - 0 no flip (Default)
        - 1 flip thermal 
        - 2 flip color & depth
        - 3 flip all -->
  <FlipMode>0</FlipMode>
  <!-- Modes of the calibration pattern
        - 0 if the calibration pattern is hot and the background is cold (default)
        - 1 if the calibration pattern is cold and the backtround is hot  -->
  <PatternTemp>0</PatternTemp>
  <!-- Color of the calibration pattern
        - 0 Black board with white circles (default)
        - 1 White board with black circles -->
  <PatternColor>0</PatternColor>
  
  <!-- Save modifyed images 
        - 0 to save imagees with selected FlipMode (default) 
        - 1 to save images as default FlipMode
        NOTE: To detect the cirle pattern it must appear with white background and black cercles.
        That way if you want to see the circle detection but save the images as default select 0 -->
  <SaveDefaultImages>0</SaveDefaultImages>
  
  <!-- Detect the asymmetric circle pattern, the pattern must appear with white background and black cercles 
        - 0 Do not detect the pattern (default)
        - 1 Detect the pattern-->
  <AsymCirlePaternDetector>1</AsymCirlePaternDetector>
  <!-- Number of inner corners per a item row and column. (square, circle) -->
  <BoardSize_Width>9</BoardSize_Width>
  <BoardSize_Height>3</BoardSize_Height>
  
</opencv_storage>